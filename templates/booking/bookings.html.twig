{% extends 'base.html.twig' %}

{% block title %}Hello BookingController!
{% endblock %}

{% block body %}
    {% for message in app.flashes('success') %}
        <div class="bg-green-500 text-white text-center py-2 rounded">
            {{ message }}
        </div>
    {% endfor %}
<div class="container mx-auto px-4 py-8">
    <h1 class="text-3xl font-bold mb-6 text-center text-gray-800">Nos bookings</h1>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
        {% for booking in bookings %}
        <div class="bg-white shadow-lg rounded-lg p-6 transition-transform transform hover:scale-105">
            <h2 class="text-xl font-semibold mb-2 text-blue-600">{{ booking.service.title }}</h2>
            <p class="text-gray-700 mb-2">Date : {{ booking.date|date('d/m/Y') }}</p>
            <p class="text-gray-700 mb-2">Time : {{ booking.time|date('H:i')  }}</p>
            <p class="text-gray-600">Adresse: {{ booking.service.adress }}, {{ booking.service.code }} {{ booking.service.city }}</p>
            <div class='text-center'>
             <a href="{{ path('app_delete', { 'id': booking.id }) }}" class="items-center justify-center mt-4 inline-block bg-blue-600 text-white font-semibold py-2 px-4 rounded hover:bg-blue-700 transition duration-200">
                Se d√©sinscrire
            </a>
            </div>
        </div>
        {% endfor %}
    </div>
</div>
{% endblock %}