{% extends 'base.html.twig' %}

{% block title %}Hello BookingController!
{% endblock %}

{% block body %}
  {% for message in app.flashes('success') %}
        <div class="bg-green-500 text-white text-center py-2 rounded">
            {{ message }}
        </div>
    {% endfor %}
	<div class="container mx-auto px-4 py-8 text-center">
		<h1 class="text-3xl font-bold text-center mb-6">Réservation confirmée</h1>
        <h3 class="text-2xl font-bold text-center mb-6">{{ service.title }}</h1>
        <p class="text-center">Votre réservation a été confirmée pour le {{ booking.date|date('d/m/Y') }} à {{ booking.time|date('H:i') }}</p>
          <a href="{{ path('app_home') }}" class=" items-center justify-center mt-4 inline-block bg-blue-600 text-white font-semibold py-2 px-4 rounded hover:bg-blue-700 transition duration-200">
            Retour à la liste des services
            </a>
	</div>
{% endblock %}
