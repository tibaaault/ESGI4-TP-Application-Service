{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
	<div class="flex pt-10"></div>

    <div class="max-w-md mx-auto p-6 bg-white rounded shadow-md">
        <h1 class="text-2xl font-semibold text-center text-gray-800 mb-6">Register</h1>

        {{ form_errors(registrationForm) }}

        {{ form_start(registrationForm) }}
        
            <div class="mb-4">
                {{ form_label(registrationForm.email, null, {'label_attr': {'class': 'block text-gray-700'}}) }}
                {{ form_widget(registrationForm.email, {'attr': {'class': 'w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500'}}) }}
                {{ form_errors(registrationForm.email) }}
            </div>

            <div class="mb-4">
                {{ form_label(registrationForm.plainPassword, 'Password', {'label_attr': {'class': 'block text-gray-700'}}) }}
                {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500'}}) }}
                {{ form_errors(registrationForm.plainPassword) }}
            </div>

            <div class="mb-4 flex items-center">
                {{ form_widget(registrationForm.agreeTerms, {'attr': {'class': 'mr-2'}}) }}
                {{ form_label(registrationForm.agreeTerms, null, {'label_attr': {'class': 'text-gray-700'}}) }}
                {{ form_errors(registrationForm.agreeTerms) }}
            </div>

            <button type="submit" class="w-full bg-blue-500 text-white py-2 rounded-lg font-semibold hover:bg-blue-600 transition duration-200">
                Register
            </button>
        
        {{ form_end(registrationForm) }}
    </div>
{% endblock %}
