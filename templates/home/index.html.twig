{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}
<div class="container mx-auto px-4 py-8">
    <h1 class="text-3xl font-bold mb-6 text-center text-gray-800">Nos Services</h1>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
        {% for service in services %}
        <div class="bg-white shadow-lg rounded-lg p-6 transition-transform transform hover:scale-105">
            <h2 class="text-xl font-semibold mb-2 text-blue-600">{{ service.title }}</h2>
            <p class="text-gray-700 mb-2">{{ service.description }}</p>
            <p class="text-gray-600 italic mb-2">Type: {{ service.type }}</p>
            <p class="text-gray-600">Adresse: {{ service.adress }}, {{ service.code }} {{ service.city }}</p>
             <a href="{{ path('app_show', { 'id': service.id }) }}" class=" items-center justify-center mt-4 inline-block bg-blue-600 text-white font-semibold py-2 px-4 rounded hover:bg-blue-700 transition duration-200">
                Show
            </a>
        </div>
        {% endfor %}
    </div>
</div>
{% endblock %}
